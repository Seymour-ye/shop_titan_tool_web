        <%= image_tag "general/none", alt: "Select None" %>
      <% end %>
    </div>
  </div>
  <div>
    <div class="filter">
      <div class="filter_name"><%= "#{t('resource')} #{t('inclusion')}" %></div>
      <% @resources.each do |resource| %>
